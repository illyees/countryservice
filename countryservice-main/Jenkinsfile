pipeline {
    agent any
    
    tools {
        maven 'mymaven'
        jdk 'JDK21'
    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/illyees/countryservice.git'
            }
        }
        
        stage('List Files') {
            steps {
                sh '''
                    echo "=== LISTING ALL FILES ==="
                    pwd
                    ls -la
                    echo "=== FINDING POM ==="
                    find . -name "pom.xml" 2>/dev/null || echo "No pom.xml found"
                    echo "=== ALL FILES RECURSIVE ==="
                    find . -type f | head -20
                '''
            }
        }
    }
}
